{% extends 'layout/layout.twig' %}

{% block title %}{{ technology }}{% endblock %}

{% block description %}
    Ressources pour le DÃ©veloppement Informatique en {{ technology }}
{% endblock %}

{% block main %}
<main>
    <table class="table">

        {% for category, resourceCategory in resources %}
            <tr>
                <th class="trans-up" 
                    colspan="2">
                    {{ category }}
                </th>
            </tr>

            {% for resource in resourceCategory %}    
            <tr>
                <td>
                    <a class="button-primary" 
                        href="https://{{ resource.link }}" 
                        title="https://{{ resource.link }}">
                        <strong>{{ resource.name }}</strong>
                    </a>
                </td>
                <td class="font-monospace">{{ resource.description }}</td>
            </tr>
            {% endfor %}
        {% endfor %}
    </table>
</main>
{% endblock %}
