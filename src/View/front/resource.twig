{% extends 'layout/layout.twig' %}

{% block title %}{{ technology }}{% endblock %}

{% block description %}Ressources pour le DÃ©veloppement Informatique en {{ technology }}{% endblock %}

{% block main %}
    <main>
        {% for category, resourceCategory in resources %}
        <section>
            <h2>{{ category }}</h2>
            <table class="table">
                <tbody>
                {% for resource in resourceCategory %}
                    <tr>
                        <td>
                            <a class="button-blue" href="https://{{ resource.link }}" title="https://{{ resource.link }}">
                                <strong>{{ resource.name }}</strong>
                            </a>
                        </td>
                        <td>{{ resource.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
        {% endfor %}
    </main>
{% endblock %}
