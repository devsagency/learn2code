{% extends 'layout/layout.twig' %}

{% block title %}Authentication{% endblock %}

{% block description %}Page de connexion à Tools2Code{% endblock %}

{% block script %}
    <script src="js/recaptcha.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer></script>
{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form" action="{{ url('auth')}}" method="post">
            <fieldset>
                <ul>
                    <li>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" placeholder="Insérer votre courriel" required>
                    </li>
                    <li>
                        <label for="pass">Password</label>
                        <input id="pass" name="pass" type="password" placeholder="Insérer votre mot de passe" autocomplete="off" required>
                    </li>
                </ul>
                <ul>
                    <li>
                        <div id="recaptcha" class="g-recaptcha container" data-sitekey="6LdTBtoZAAAAADITfTTXpjsctFXZqKXZc-seM9ZL"></div>
                    </li>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Connexion">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('home') }}">Quitter</a>
    </main>
{% endblock %}
