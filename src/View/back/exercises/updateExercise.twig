{% extends 'layout/layout.twig' %}

{% block subtitle %}Edit an Exercise{% endblock %}

{% block summary %}{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form" method="post" action={{ url('exercises!update', {'id': exercise.id}) }}>
            <fieldset>
                <legend>
                    <i class="fas fa-laptop-code fa-2x"></i>
                </legend>
                <ul>
                    <li>
                        <label for="name">Name*</label>
                        <input id="name" name="name" type="text" maxlength="20" required value="{{ exercise.name }}">
                    </li>
                    <li>
                        <label for="content">Content*</label>
                        <textarea id="content" name="content" rows="15" cols="30" required>{{ exercise.content }}</textarea>
                    </li>
                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Update">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}
